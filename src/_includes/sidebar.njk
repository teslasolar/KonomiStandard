<div class="mb-4" x-data="search()">
  <input
    type="text"
    x-model="q"
    @input="doSearch"
    placeholder="Search..."
    class="search-input"
  >
  <div x-show="open && results.length > 0" class="mt-2 bg-konomi-surface border border-konomi-primary/50 rounded max-h-64 overflow-y-auto">
    <template x-for="result in results" :key="result.id">
      <a :href="result.url" class="block px-3 py-2 hover:bg-konomi-primary/30 transition">
        <div class="font-semibold text-konomi-text text-sm" x-text="result.name"></div>
        <div class="text-xs text-konomi-muted" x-text="result.type"></div>
      </a>
    </template>
  </div>
</div>

